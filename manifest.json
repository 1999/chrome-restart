{
    "name": "Chrome restart",
    "description": "Restart your Chrome browser from panel or with hotkey",
    "version": "1.0",
    "manifest_version": 2,
    "minimum_chrome_version": "25",

    "browser_action": {
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_title": "Click to restart Chrome"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },

    "icons": {
        "128": "icons/128.png",
        "16": "icons/16.png",
        "48": "icons/48.png"
    },

    "permissions": [
        "commands"
    ]
}
