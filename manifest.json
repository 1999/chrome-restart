{
    "name": "Chrome restart",
    "description": "Restart your Chrome browser from panel or with hotkey",
    "version": "1.0",
    "manifest_version": 2,
    "minimum_chrome_version": "25",

    "background": {
        "scripts": [

        ],
        "persistent": false
    },

    "icons": {
        "128": "icons/128.png",
        "16": "icons/16.png",
        "48": "icons/48.png"
    },

    "permissions": [
        "activeTab",
        "commands"
    ]
}
